rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own appointments
    match /appointments/{appointmentId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || request.auth.token.role == 'admin');
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Admin can read all documents
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow read access to public service data
    match /services/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Payment records are protected
    match /payments/{paymentId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || request.auth.token.role == 'admin');
    }
  }
}
